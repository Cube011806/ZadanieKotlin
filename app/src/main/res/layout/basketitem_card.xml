<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/basketItemCard"
    android:layout_width="match_parent"
    android:layout_height="130sp"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/basketItemImage"
            android:layout_width="74dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:scaleType="fitStart"
            android:src="@drawable/kurtka1" />

        <TextView
            android:id="@+id/basketItemTitle"
            android:layout_width="238dp"
            android:layout_height="41dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:text="Kurtka damska MERIDA beżowa DStreet"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/basketItemPrice"
            android:layout_width="74dp"
            android:layout_height="30sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="75dp"
            android:text="189,99 zł"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/removeButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/remove_shopping_cart" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
